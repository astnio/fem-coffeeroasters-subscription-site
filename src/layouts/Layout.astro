---
import Nav from '../components/Nav.astro';

const { title } = Astro.props;
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='viewport'
      content='width=device-width'
    />
    <link
      rel='icon'
      type='image/png'
      sizes='32x32'
      href='./assets/favicon-32x32.png'
    />
    <meta
      name='generator'
      content={Astro.generator}
    />
    <title>Coffeeroasters{title && ` | ${title}`}</title>
  </head>
  <body>
    <header>
      <Nav />
    </header>
    <main>
      <slot />
    </main>
    <footer>
      <Nav />
    </footer>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
