---
import '../styles/global.css';
import '../styles/fonts.css';
import Nav from '../components/Nav.astro';

const { title } = Astro.props;
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='viewport'
      content='width=device-width'
    />
    <link
      rel='icon'
      type='image/png'
      sizes='32x32'
      href='./assets/favicon-32x32.png'
    />
    <meta
      name='generator'
      content={Astro.generator}
    />
    <title>Coffeeroasters{title && ` | ${title}`}</title>
  </head>
  <body>
    <header class='max-width'>
      <Nav />
    </header>
    <main class='max-width'>
      <slot />
    </main>
    <footer class='max-width'>
      <Nav />
    </footer>
  </body>
</html>

<style>
  html,
  body {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;

    min-height: 100dvh;
    margin: 0;
    padding-inline: 1rem;

    font-family: 'Barlow', sans-serif;
  }

  header,
  main,
  footer {
    width: 100%;
  }

  header {
    margin-bottom: 2rem;
  }
</style>
