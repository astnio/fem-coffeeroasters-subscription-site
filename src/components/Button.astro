---
interface Props {
  type?: 'primary' | 'secondary';
  isLink?: boolean;
  url?: string;
}

const { type = 'primary', isLink = false, url } = Astro.props;

const ButtonElement = isLink ? `a` : `button`;
---

<ButtonElement
  class={type}
  {...isLink ? { href: url } : null}>
  <slot />
</ButtonElement>
