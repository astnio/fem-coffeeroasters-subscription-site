---
interface Props {
  type?: 'primary' | 'secondary';
  isLink?: boolean;
  url?: string;
}

const { type = 'primary', isLink = false, url } = Astro.props;

const ButtonElement = isLink ? `a` : `button`;
---

<style>
  a,
  button {
    border: none;
    padding: 1rem;
    border-radius: var(--radius-button);
  }

  .primary {
    background-color: red;
  }
</style>

<ButtonElement
  class={type}
  {...isLink ? { href: url } : null}>
  <slot />
</ButtonElement>
